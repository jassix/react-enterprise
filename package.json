{
  "name": "react-enterprise",
  "private": true,
  "workspaces": {
    "packages": [
      "apps/*",
      "packages/*",
      "packages/ui/*",
      "tooling/*",
      "tooling/config/*"
    ],
    "catalog": {
      "@types/bun": "^1.3.6",
      "typescript": "5.9.2"
    },
    "catalogs": {
      "std": {
        "oxide.ts": "^1.1.0",
        "remeda": "^2.33.4",
        "ts-pattern": "^5.9.0",
        "valibot": "^1.2.0"
      },
      "react": {
        "react": "^19.0.0",
        "@types/react": "^19.0.0"
      },
      "ui": {
        "@pandacss/dev": "^1.8.1",
        "@ark-ui/react": "^5.30.0"
      }
    }
  },
  "scripts": {
    "build": "turbo run build",
    "dev": "turbo run dev",
    "lint": "turbo run lint",
    "format": "oxfmt --write .",
    "check-types": "turbo run check-types"
  },
  "devDependencies": {
    "oxfmt": "^0.27.0",
    "oxlint": "^1.42.0",
    "turbo": "^2.5.6"
  },
  "engines": {
    "bun": ">=1.3.5"
  },
  "packageManager": "bun@1.3.5"
}
